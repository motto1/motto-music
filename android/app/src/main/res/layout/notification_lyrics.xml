<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/transparent">

    <!-- 封面 -->
    <ImageView
        android:id="@+id/notification_cover"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:contentDescription="Album Cover" />

    <!-- 内容区域 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="8dp">

        <!-- 歌曲标题 -->
        <TextView
            android:id="@+id/notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- 艺术家 -->
        <TextView
            android:id="@+id/notification_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#CCCCCC"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="2dp" />

        <!-- 当前句歌词 -->
        <TextView
            android:id="@+id/notification_current_lyric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="6dp"
            android:visibility="gone" />

        <!-- 下一句歌词 -->
        <TextView
            android:id="@+id/notification_next_lyric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#888888"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- 控制按钮区域 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <!-- 上一首按钮 -->
        <ImageButton
            android:id="@+id/notification_prev"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_media_previous"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Previous"
            android:scaleType="fitCenter" />

        <!-- 播放/暂停按钮 -->
        <ImageButton
            android:id="@+id/notification_play_pause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_media_pause"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Play/Pause"
            android:scaleType="fitCenter"
            android:layout_marginStart="4dp" />

        <!-- 下一首按钮 -->
        <ImageButton
            android:id="@+id/notification_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_media_next"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Next"
            android:scaleType="fitCenter"
            android:layout_marginStart="4dp" />
    </LinearLayout>
</LinearLayout>
